@model CQRS_Casgem.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<h1><link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /></h1>
<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
         <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Marka</label>
        <input type="text" class="form-control" asp-for="Brand" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" class="form-control" asp-for="Category" />
        <br />
        <button class="btn btn-primary">Ürünü Ekle</button>
    </form>
</div>